{
  "manifest_version": 2,
  "name": "Selecter",
  "version": "1.0",
  "description": "Test selecter app",
  "author": "Roman Romanov <r.romanov@protonmail.com>",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Проверить выбранный текст"
  },

  "permissions": [
    "activeTab",
    "https://seo-wiki.pro/*"
  ],

  "content_security_policy": "script-src 'self' https://seo-wiki.pro; object-src 'self'"
}
